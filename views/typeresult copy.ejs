        .result {
            font-size: 1.2em;
            margin: 15px 0;
        }
        .btn {
            display: inline-block;
            margin-top: 25px;
            padding: 10px 24px;
            background: #0078d7;
            color: #fff;
            border: none;
            border-radius: 4px;
            text-decoration: none;
            font-size: 1em;
            cursor: pointer;
        }
        .btn:hover {
            background: #005fa3;
        }


        html, body {
        height: 100%;
        margin: 0;
        }
        body {
            background: linear-gradient(to top, #7272ed, rgba(0,0,0,0.8));
            background-repeat: repeat-y;
            background-size: 100% auto;
            color:yellow;

            }
        body::before {
            content: "";
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(to top, #7272ed, rgba(0,0,0,0.8));
            z-index: -1;
            }

        .Page1{
            height: 100vh;
            display: flex;
            flex-direction: column;
            align-items: center;
            
            
        }
        
        
        .header-title{
            justify-self: center;
            align-self: center;
            justify-items: center;
            align-items: center;
            margin-bottom: 5rem;
            font-size: 5rem;
            color: white
        }
        h2{
            justify-self: center;
            font-size: 4rem;
            font-family: "Courier New";        }

        .typing-text {
            /* overflow: hidden; */
            color:yellow;
            font-family: 'Courier New';
            white-space: nowrap;
            width: 0;
            height: 5rem;
            font-size: 3rem;
            
            position: relative;
        }

        .i{
            font-style: italic;
        font-family: "Source Code Pro", monospace;
        animation: ChangeFont 2.8s step-end infinite;
        animation-delay: 3s;
        animation-fill-mode: forwards;
        display: inline-block;
        }

        @keyframes typeIn {
        to {
            width: 22ch;
        }
        }



        @keyframes ChangeFont {
        0%{font-family: "Source Code Pro", monospace;}
        
        33%{  font-family: "Bebas Neue", sans-serif;
        }
        66%{  font-family: "WDXL Lubrifont TC", sans-serif;
        }   
        
        }

        .CardContainer{
            display: flex;
            flex-direction: row;
            height: 100%;
            align-items: flex-end;

        }

        .TextCard{
            border-radius: 1rem;
            border: black;
            background: rgba(0,0,0,0.8);
            padding: 2rem;
            margin: 2.5rem

        }

        .result-card{
            margin-left: 2rem;
            border-radius: 0.5rem ;
            border-color: yellow;
            width:60%;
            justify-content: center;
            background-color: black;
        }

        .result-container{
            display: flex;
            flex-direction: row;
            justify-content: space-evenly;
        }
        .result-container h1 {
            margin-bottom: 20px;

        }
        .result{
            background-color: white;
            color: black;
            max-width: 33%;
            border-radius: 0.3rem;
            padding: 2rem;
        }
        .Value{
            width: 100%;
        }
        .text-to-display {
            color:white;
            opacity: 0;
            transform: translateY(-20px);
            animation: headerEnter 0.8s ease forwards;
            }

            @keyframes headerEnter {
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        form { max-width: 80vw; margin: auto; }
        label { display: block; margin-top: 20px; }
        select, button { width: 100%; padding: 8px; margin-top: 5px; border-radius: 1rem; height: 4rem; background: #f0d491}
        button{
        margin-bottom: 6rem;
        background: rgb(77,238,234);
        width: 30%;
        border: none;

        }
    </style>
</head>
<body>
    <div class="">
        <h1 class="header-title">Typing Test Result</h1>
        <div class="result-container">
            <div class="result">
                <strong>Words Per Minute (WPM):</strong> <div className="Value"><%= evaluation.wpm %></div>
            </div>    
            <div class="result">
                <strong>Accuracy:</strong> <%= evaluation.wordAccuracy %>%
            </div>

            <div class="result">
                <strong>Time Taken:</strong> 60 seconds
            </div>
        </div>
        <a href="/typetest" class="btn">Try Again</a>
    </div>
</body>
