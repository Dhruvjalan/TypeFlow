      const interval = setInterval(() => {
        if (time <= 0) {
          clearInterval(interval);
          input.disabled = true;
        }
        timer.textContent = time;
        time--;
      }, 1000);
    }

    input.addEventListener("keydown", (e) => {
      if (!intervalStarted) {
        intervalStarted = true;
        startTimer();
      }

    

    </script>

